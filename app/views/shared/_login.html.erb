<div class="modal two-quarter" id="login-modal">
  <a class="modal-close cancel-modal" href="#"><span class="icon icon-close"></span></a>
  <div class="contained">
    <div class="primary-heading">
      <h1>Sign in</h1>
    </div>
    <div class="flush">
      <div class="module-set">
        <div class="login-buttons">
          <ul>
            <li><%= link_to(image_tag('signin-facebook.png'), '/auth/facebook') %></li>
            <li><%= link_to(image_tag('signin-twitter.png'), '/auth/twitter') %> </li>
          </ul> 
        </div>
      </div>
    </div>
    <div class="flush">
    </div>
  </div>
</div>

<script type="text/javascript">

  $(function() {
    $('#login-modal').dialog({
      autoOpen: false,
      modal: true,
      resizable: false,
      width: 460,
      show: 'explode',
      hide: 'explode',
      dialogClass: 'sv-dialog'
    });
    $(document).on('click', '.button-login', function(e) {
      $('#login-modal').dialog('open');
    });
  });

</script>

